<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanxi.dao.UserMapper">

    <select id="getUserList" parameterType="int" resultType="com.lanxi.entity.User">
        SELECT * FROM user LIMIT #{0},#{1}
    </select>
    <select id="checkUsername" parameterType="java.lang.String" resultType="int">
      SELECT COUNT(1) FROM user
      WHERE username = #{0}
    </select>

    <select id="checkPassword" parameterType="java.lang.String" resultType="com.lanxi.entity.User">
      SELECT * FROM user
      WHERE username = #{0} AND password = #{1}
    </select>

    <select id="getUserById" resultType="com.lanxi.entity.User">
        SELECT * FROM user
        WHERE id = #{0}
    </select>

    <insert id="addUser" parameterType="com.lanxi.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (username,password,age,hobby,birthday,reg_time,state)
        VALUES (
        #{username},
        #{password},
        #{age},
        #{hobby},
        #{birthday},
        #{regTime},
        #{state}
        )
    </insert>


    <update id="update" parameterType="com.lanxi.entity.User">
        UPDATE user SET
        username = #{username},
        password = #{password},
        age = #{age},
        hobby = #{hobby},
        birthday = #{birthday},
        state = #{state}
        WHERE id = #{id}
    </update>

</mapper>