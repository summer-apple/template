<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanxi.dao.UserMapper">


    <select id="checkUsername" parameterType="java.lang.String">
      SELECT COUNT(1) FROM user
      WHERE username = #{username}
    </select>

    <select id="checkPassword" resultType="com.lanxi.entity.User">
      SELECT * FROM user
      WHERE username = #{username} AND password = #{password}
    </select>

    <select id="getUserById" resultType="com.lanxi.entity.User">
        SELECT * FROM user
        WHERE id = #{id}
    </select>

</mapper>